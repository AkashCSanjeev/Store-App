<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="158dp"
    android:layout_marginLeft="22dp"
    android:layout_marginTop="28dp"
    android:layout_marginRight="22dp"
    tools:context=".Fragments.RecommendationFragment">


    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recommendationRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="horizontal"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbHorizontal="@drawable/thumb"
        android:scrollbarTrackHorizontal="@drawable/track"
        android:scrollbarSize="9dp"
        android:orientation="horizontal" />
</FrameLayout>